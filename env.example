# LLM-Konfiguration
OPENAI_API_KEY=your_openai_api_key
LOCAL_MODEL_PATH=/path/to/local/model
MODEL_NAME=gpt-3.5-turbo
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=1000

# Mandanten-Konfiguration
BRANDS=heine,subbrand1,subbrand2
DEFAULT_BRAND=heine

# Vector Store
VECTOR_STORE_TYPE=chromadb
VECTOR_STORE_PATH=./data/vector_store
EMBEDDING_MODEL=text-embedding-ada-002

# API-Konfiguration
CUSTOMER_API_URL=http://localhost:8001/api
CUSTOMER_API_KEY=your_customer_api_key
API_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/heine_ai.log
ANONYMIZE_LOGS=true

# Datenschutz
DATA_RETENTION_DAYS=30
ENABLE_DATA_DELETION=true

# Eskalation
ESCALATION_THRESHOLD=0.7
ESCALATION_KEYWORDS=mitarbeiter,beschwerde,sofort,unzufrieden

# Web Server
HOST=0.0.0.0
PORT=8000
STREAMLIT_PORT=8501

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here 